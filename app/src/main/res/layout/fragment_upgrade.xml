<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@layout/main_header_selector"
    android:gravity="center">

    <!-- Include other widget or layout tags here. These are considered
            "child views" or "children" of the linear layout -->

    <TextView
        android:id="@+id/textViewInfintePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reload Quantum Points"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Reload Quantum Points" />

    <TextView
        android:id="@+id/textViewInfintePointsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Get 20/60/Unlimited Anomalies, Attractors and Void points"
        android:textColor="#FFFFFF"
        tools:text="Reload Anomalies, Attractors and Void points" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/empty_tail_divider"
        android:orientation="horizontal"  >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tail_divider"
            android:orientation="vertical"  >

            <TextView
                android:id="@+id/get20Points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="20 points"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/get20PointsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="$ 0.99"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />



            <Button
            android:id="@+id/buttonGet20Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
            android:background="@color/upgrade_button"
            android:text="Buy"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="10dp"
            android:showDividers="middle"
            android:divider="@drawable/empty_tail_divider"
            android:layout_width="10dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tail_divider"
            android:orientation="vertical"  >

            <TextView
                android:id="@+id/get60Points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="60 points"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/get60PointsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="$ 15.00"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />



            <Button
                android:id="@+id/buttonGet60Points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/upgrade_button"
                android:text="Buy"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

        </LinearLayout>



        <LinearLayout
            android:layout_height="10dp"
            android:showDividers="middle"
            android:divider="@drawable/empty_tail_divider"
            android:layout_width="10dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_tail_divider"
            android:orientation="vertical"  >

            <TextView
                android:id="@+id/getUnlimitedPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Unlimited"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/getUnlimitedPointsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="$ 15.00"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <Button
                android:id="@+id/buttongetUnlimitedPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/upgrade_button"
                android:text="Buy"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/syncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/upgrade_button"
        android:visibility="gone"
        android:text="Sync Previous Quantum Points"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <LinearLayout
        android:layout_height="10dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_tail_divider"
        android:layout_width="10dp">
    </LinearLayout>

    <View android:id="@+id/tile_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:color="#1FFFFFFF"
        android:background="#1FFFFFFF" />

    <LinearLayout
        android:layout_height="10dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_tail_divider"
        android:layout_width="10dp">
    </LinearLayout>

    <TextView
        android:id="@+id/textViewExtendRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extend radius to 20000 meters"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Extend radius to 20000 meters" />

    <TextView
        android:id="@+id/textViewExtendRadiusDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Double the radius to 20000 meters (12.4 miles)"
        android:textColor="#FFFFFF"
        tools:text="Double the radius to 20000 meters (12.4 miles)" />

    <TextView
        android:id="@+id/textViewExtendRadiusPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$ 3.99"
        android:textSize="17sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonExtendRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Buy"
        android:textColor="#FFFFFF"
        android:background="@color/upgrade_button"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <LinearLayout
        android:layout_height="10dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_tail_divider"
        android:layout_width="5dp">
    </LinearLayout>

    <View android:id="@+id/tile_divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:color="#1FFFFFFF"
        android:background="#1FFFFFFF" />

    <LinearLayout
        android:layout_height="10dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_tail_divider"
        android:layout_width="10dp">
    </LinearLayout>

    <TextView
        android:id="@+id/textViewWaterPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip Water Points"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Skip Water Points" />

    <TextView
        android:id="@+id/textViewWaterPointsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Skips points generated in water"
        android:textColor="#FFFFFF"
        tools:text="Skips points generated in water" />

    <TextView
        android:id="@+id/textViewWaterPointsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$ 5.00"
        android:textSize="17sp"
        android:textColor="#FFFFFF" />


    <Button
        android:id="@+id/buttonWaterPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Buy"
        android:textColor="#FFFFFF"
        android:background="@color/upgrade_button"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


</LinearLayout>