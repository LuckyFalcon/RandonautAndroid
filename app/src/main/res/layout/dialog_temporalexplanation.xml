<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/imageTemporalExplanationCloseButton"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/outline_close_24"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewExplanationTop"
        android:layout_width="293dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="These are ways to that let Steve generate entropy."
        android:textColor="@color/navSelected"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewInternetExplanation"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Internet: Steve, who is physically connected to the server\'s brain via a quartz crystal clock, will divulge temporal randomness"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewExplanationTop" />

    <TextView
        android:id="@+id/textViewLocalExplanation"
        android:layout_width="272dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Local: Steve divulges entropy using the phone's CPU clock"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInternetExplanation" />


</androidx.constraintlayout.widget.ConstraintLayout>