<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="370dp"
    android:layout_height="200dp">

    <!-- These are the buttons -->

    <Button
        android:id="@+id/intentNext"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"

        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Next"
        android:textColor="@color/buttonText"></Button>

    <Button
        android:id="@+id/intentSkip"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"

        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Skip"
        android:textColor="@color/buttonText"></Button>

    <TextView
        android:id="@+id/rQuestionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="31dp"
        android:text="What did you set your intent to?"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editIntent"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="82dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Fill in here"
        android:inputType="textMultiLine"
        android:maxLength="20" />

</RelativeLayout>